
 alert(1);
function power(base, exp){
  var result = 1;
    for(var cnt = 0; cnt < exp; cnt++){
      result *= base;
    }

    return result;
  }
}


  var base = +prompt('введите число', 1);
  var exp = +prompt('введите степень', 2);

  if (base  === undefined) {
    alert('число не передано');
  } else {
    if (exp <= 0) { 
      console.log('Степень '+exp+' не поддерживается, введите целую степень, большую 0');
      return;
    } else {
      console.log('Результат равен ', power(base, exp));
    }
  }

